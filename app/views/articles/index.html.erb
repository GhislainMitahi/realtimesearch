<div class="container">
  <div class="row">
    <div class="col">
      <p class="text-success"><%= notice %></p>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <h1>Articles</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= form_with(url: articles_path, method: "GET", data: { controller: "form-submission", turbo_frame: "articles", turbo_action: "advance" }) do |form| %>
        <div class="input-group mb-3">
          <%= form.label :query, "Search by title:", class: "input-group-text" %>
          <%= form.text_field :query, class: "form-control", data: { action: "input->form-submission#search" } %>
          <button class="btn btn-primary" type="submit">Search</button>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <!-- Rendering the new partial here -->
      <%= render "articles", articles: @articles %>
    </div>
  </div>
</div>
